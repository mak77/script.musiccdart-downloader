<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.musiccdart-downloader"
       name="Music CDArt Downloader"
       version="1.0.2"
       provider-name="mak">
  <requires>
    <import addon="xbmc.python"
            version="2.1.0" />
    <import addon="xbmc.json"
            version="6.6.0" />
    <import addon="xbmc.addon"
            version="12.0.0" />
    <import addon="script.module.simplejson"
            version="3.3.0" />
  </requires>
  <extension point="xbmc.python.script"
             library="default.py" />
  <extension point="xbmc.addon.metadata">
    <language></language>
    <platform>all</platform>
    <summary lang="en">Downloads CDArt for your music albums</summary>
    <summary lang="it">Scarica CDArt per per i tuoi album musicali</summary>
    <description lang="en">Downloads CDArt for music albums having proper Musicbrainz ID in their id3v2 tag</description>
    <description lang="it">Scarica CDArt per gli album musicali con il corretto Musicbrainz ID nel tag id3v2</description>
    <website></website>
    <source>https://github.com/mak77/script.musiccdart-downloader</source>
    <forum>http://forum.kodi.tv/showthread.php?tid=249137</forum>
    <email></email>
  </extension>
</addon>
